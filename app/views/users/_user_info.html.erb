<aside class="col-md-4">
  <section class="user_info">
    <h1>
    <%= gravatar_for @user %>
      <%= link_to @user.name,@user %>
    </h1>
  </section>
  <section class="stats">
    <%= render 'shared/stats' %>
  </section>
  <% user = User.find(params[:id])%>
  <%if current_user?user%>
    <section class="micropost_form">
      <%= render 'shared/entry_form' %>
    </section>
  <% end %>
</aside>